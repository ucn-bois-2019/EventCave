@model EventCaveWeb.ViewModels.CreateUpdateEventViewModel

@using (@Html.BeginForm("Create", "Events"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <section class="py-5">
        <div class="container">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center mb-4">
                <h3 class="mb-0 font-weight-bold">
                    Become a <span class="text-primary">host</span>
                </h3>
                <a href="@Url.Action("Index", "Home")" class="text-muted">
                    <small>Back to homepage</small>
                </a>
            </div>
            <hr class="my-4 my-lg-5" />
            <div class="row">
                <div class="col-12 col-lg-4">
                    <h5 class="font-weight-bold">Name that catches an eye</h5>
                    <p class="text-muted">
                        <small>
                            Samsa was a travelling salesman - and above it there hung a
                            picture that he had recently cut out of an illustrated
                            magazine and housed in a nice, gilded frame.
                        </small>
                    </p>
                </div>
                <div class="col-12 col-lg-7 ml-auto">
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Images</label>
                        @Html.TextBoxFor(model => model.Images, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <hr class="my-4 my-lg-5" />
            <div class="row">
                <div class="col-12 col-lg-4">
                    <h5 class="font-weight-bold">Time and location is crucial!</h5>
                    <p class="text-muted">
                        <small>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Tempore eaque pariatur ipsa nisi optio aut facilis, fuga, quis
                            et inventore nulla amet. Quae iure ipsum eaque. Illum
                            molestias est impedit.
                        </small>
                    </p>
                </div>
                <div class="col-12 col-lg-7 ml-auto">
                    <div class="form-group">
                        <label>Date and time</label>
                        @Html.TextBoxFor(model => model.Datetime, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        @Html.TextBoxFor(model => model.Location, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <hr class="my-4 my-lg-5" />
            <div class="row">
                <div class="col-12 col-lg-4">
                    <h5 class="font-weight-bold">Privacy measures</h5>
                    <p class="text-muted">
                        <small>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Tempore eaque pariatur ipsa nisi optio aut facilis, fuga, quis
                            et inventore nulla amet. Quae iure ipsum eaque. Illum
                            molestias est impedit.
                        </small>
                    </p>
                </div>
                <div class="col-12 col-lg-7 ml-auto">
                    <div class="form-group">
                        <label>Limit</label>
                        @Html.TextBoxFor(model => model.Limit, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <hr class="my-4 my-lg-5" />
            <div class="row">
            <div class="col-12 col-lg-4">
                <h5 class="font-weight-bold">Category</h5>
                <p class="text-muted">
                    <small>
                        Category Category Category Category Category
                        Category Category Category Category Category
                        Category Category Category Category Category
                        Category Category Category Category Category
                        Category Category Category Category Category
                    </small>
                </p>
            </div>
            <div class="col-12 col-lg-7 ml-auto">
                <div class="form-group">
                    <label>Choose category</label>
                    @Html.DropDownListFor(m => Model.SelectedCategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select category", new { @class = "form-control" })
                </div>
            </div>
        </div>

            <div class="text-right">
                <button class="btn btn-primary" type="submit">
                    Become a host!
                </button>
            </div>
        </div>
    </section>

}