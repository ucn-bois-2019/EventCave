@model EventCaveWeb.ViewModels.CreateUpdateEventViewModel
@{
    ViewBag.Title = "Edit event | Event Cave";
}
@using (@Html.BeginForm("Edit", "Events"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <section class="py-5">
        <div class="container">
            @Html.Partial(
                "~/Views/Shared/Partials/Title.cshtml",
                new ViewDataDictionary {
                    { "Title", "Edit your event"},
                    { "ActionTitle", "Back to detail" },
                    { "ActionUrl", @Url.Action("Detail", "Events", new { id = Model.Id } ) }
                }
            )
            <hr class="my-4 my-lg-5" />
            <div class="row">
                <div class="col-12 col-lg-4">
                    <h5 class="font-weight-bold">Name that catches an eye</h5>
                    <p class="text-muted">
                        <small>
                            Samsa was a travelling salesman - and above it there hung a
                            picture that he had recently cut out of an illustrated
                            magazine and housed in a nice, gilded frame.
                        </small>
                    </p>
                </div>
                <div class="col-12 col-lg-7 ml-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Images)
                        @Html.TextBoxFor(model => model.Images, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description)
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SelectedCategoryIds)
                        @Html.ListBoxFor(model => model.SelectedCategoryIds, new SelectList(Model.Categories, "Id", "Name"), new { @class = "form-control", data_none_selected_text = "Categories" })
                    </div>
                </div>
            </div>
            <hr class="my-4 my-lg-5" />
            <div class="row">
                <div class="col-12 col-lg-4">
                    <h5 class="font-weight-bold">Time and location is crucial!</h5>
                    <p class="text-muted">
                        <small>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Tempore eaque pariatur ipsa nisi optio aut facilis, fuga, quis
                            et inventore nulla amet. Quae iure ipsum eaque. Illum
                            molestias est impedit.
                        </small>
                    </p>
                </div>
                <div class="col-12 col-lg-7 ml-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Datetime)
                        @Html.EditorFor(model => model.Datetime, new { htmlAttributes = new { @class = "form-control", Value = Model.Datetime.ToString("dd.MM.yyyy HH:mm") } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Location)
                        @Html.TextBoxFor(model => model.Location, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <hr class="my-4 my-lg-5" />
            <div class="row">
                <div class="col-12 col-lg-4">
                    <h5 class="font-weight-bold">Privacy measures</h5>
                    <p class="text-muted">
                        <small>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Tempore eaque pariatur ipsa nisi optio aut facilis, fuga, quis
                            et inventore nulla amet. Quae iure ipsum eaque. Illum
                            molestias est impedit.
                        </small>
                    </p>
                </div>
                <div class="col-12 col-lg-7 ml-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Limit)
                        @Html.TextBoxFor(model => model.Limit, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="text-right">
                <button class="btn btn-primary" type="submit">
                    Update event!
                </button>
            </div>
        </div>
    </section>
}