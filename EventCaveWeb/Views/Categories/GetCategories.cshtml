@using Microsoft.AspNet.Identity
@model  IEnumerable<EventCaveWeb.Models.Category>
@{
    ViewBag.Title = "GetCategories";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<section class="py-5">
    <div class="container">
        @Html.Partial(
            "~/Views/Shared/Partials/Title.cshtml",
            new ViewDataDictionary
            {
                { "Title", "Explore categories" },
                { "ActionUrl", "URL" }
            }
            )

        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-lg-3 mb-3 mb-lg-4">
                    <a href="/pages/search.html" class="card shadow text-white ">
                        <img src="@Url.Content(category.Image)"
                             class="card-img"
                             alt="category-img" />
                        <div class="card-img-overlay d-flex flex-column justify-content-end">
                            <h5 class="card-title font-weight-bold">
                                @Url.Content(category.Name)
                            </h5>
                            <p class="card-text">
                                @Url.Content(category.Description)
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

