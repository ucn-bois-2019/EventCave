@using EventCaveWeb.Models

<a href="@Url.Action("Detail", "Events", new { id = ViewBag.Id})" class="card shadow">
    <img class="card-img-top"
         src="@String.Format("https://images.weserv.nl?url={0}&h=768&w=768&fit=cover&a=entropy", ViewBag.ImageUrl)"
         alt="event-image.png" />
    <div class="card-body">
        <h5 class="card-title font-weight-bold">@ViewBag.Title</h5>
        <div class="mb-2">
            @foreach (Category category in ViewBag.Categories)
            {
                <div class="badge badge-primary">@category.Name</div>
            }
        </div>
        <div class="card-text text-muted">
            <small class="d-block">@ViewBag.Date</small>
            @if (ViewBag.Count == 1)
            {
                <small class="d-block">@ViewBag.Count person going</small>
            }
            else
            {
                <small class="d-block">@ViewBag.Count people going</small>
            }
            <small class="d-block">@ViewBag.Address</small>
        </div>
    </div>
</a>