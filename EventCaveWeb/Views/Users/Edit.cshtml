@model EventCaveWeb.ViewModels.EditUserProfileViewModel
@{
    ViewBag.Title = "Edit your user profile | Event Cave";
}
@using (Html.BeginForm("Edit", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <main class="ec-main">
        <section class="py-5">
            <div class="container">
                @Html.Partial(
                    "~/Views/Shared/Partials/Title.cshtml",
                    new ViewDataDictionary
                    {
                        { "Title", "Edit your user profile" },
                        { "ActionTitle", "Back to your profile" },
                        { "ActionUrl", Url.Action("Profile", "Users", new { username = Model.Username }) }
                    }
                )
                <hr class="my-4 my-lg-5" />
                <div class="row">
                    <div class="col-12 col-lg-4">
                        <h5 class="font-weight-bold">Pimp up your profile.</h5>
                        <p class="text-muted">
                            <small>
                                Quae iure ipsum eaque. Illum molestias est impedit.
                            </small>
                        </p>
                    </div>
                    <div class="col-12 col-lg-7 ml-auto">
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName)
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName)
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Picture)
                            @Html.TextBoxFor(m => m.Picture, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <hr class="my-4 my-lg-5" />
                <div class="row">
                    <div class="col-12 col-lg-4">
                        <h5 class="font-weight-bold">Personalize your bio.</h5>
                        <p class="text-muted">
                            <small>
                                Lorem ipsum dolor sit amet consectetur adipisicing elit.
                                Tempore eaque pariatur ipsa nisi optio aut facilis, fuga, quis
                                et inventore nulla amet. Quae iure ipsum eaque. Illum
                                molestias est impedit.
                            </small>
                        </p>
                    </div>
                    <div class="col-12 col-lg-7 ml-auto">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Bio)
                            @Html.TextAreaFor(m => m.Bio, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <a class="btn btn-primary" href="@Url.Action("ChangePassword", "Users", new { username = User.Identity.Name })">
                        Change password
                    </a>
                    <button class="btn btn-primary" type="submit">
                        Edit profile
                    </button>
                </div>
            </div>
        </section>
    </main>
}