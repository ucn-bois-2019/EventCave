@model EventCaveWeb.ViewModels.ChangeUserPasswordViewModel
@{
    ViewBag.Title = "Change your password | Event Cave";
}

@using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <main class="ec-main">
        <section class="py-5">
            <div class="container">
                @Html.Partial(
                    "~/Views/Shared/Partials/Title.cshtml",
                    new ViewDataDictionary
                    {
                        { "Title", "Change your password" },
                        { "ActionTitle", "Back to user profile" },
                        { "ActionUrl", Url.Action("Profile", "Users", new { username = Model.Username }) }
                    }
                )
                <hr class="my-4 my-lg-5" />
                <div class="row">
                    <div class="col-12 col-lg-4">
                        <h5 class="font-weight-bold">Your security is important to us.</h5>
                        <p class="text-muted">
                            <small>
                                Quae iure ipsum eaque. Illum molestias est impedit.
                            </small>
                        </p>
                    </div>
                    <div class="col-12 col-lg-7 ml-auto">
                        <div class="form-group">
                            @Html.LabelFor(m => m.OldPassword)
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.NewPassword)
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.RepeatedNewPassword)
                            @Html.PasswordFor(m => m.RepeatedNewPassword, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <button class="btn btn-primary" type="submit">
                        Edit profile
                    </button>
                </div>
            </div>
        </section>
    </main>
}