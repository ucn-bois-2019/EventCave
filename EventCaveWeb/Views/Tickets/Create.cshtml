@model EventCaveWeb.ViewModels.CreateUpdateTicketViewModel
@{
    ViewBag.Title = "Submit ticket | Event Cave";
}
@using (@Html.BeginForm("Create", "Tickets"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <section class="py-5">
        <div class="container">
            @Html.Partial(
                "~/Views/Shared/Partials/Title.cshtml",
                new ViewDataDictionary {
                    { "Title", "Submit a ticket"}
                }
            )
            <hr class="my-4 my-lg-5" />
            <div class="row">
                <div class="col-12 col-lg-4">
                    <h5 class="font-weight-bold">Tell us about anything that bothers you.</h5>
                    <p class="text-muted">
                        <small>
                            Samsa was a travelling salesman - and above it there hung a
                            picture that he had recently cut out of an illustrated
                            magazine and housed in a nice, gilded frame.
                        </small>
                    </p>
                </div>
                <div class="col-12 col-lg-7 ml-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Subject)
                        @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Message)
                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="text-right">
                <button class="btn btn-primary" type="submit">
                    Submit ticket
                </button>
            </div>
        </div>
    </section>
}